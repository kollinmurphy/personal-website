---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Home from "../components/HomeIcon.astro";
import CardWithOptions from "../components/CardWithOptions.astro";
---

<Layout title="Software Development by Kollin Murphy">
  <a href="/">
    <div class="mt-6 mb-4 btn btn-ghost btn-circle">
      <Home fill="black" width={32} height={32} />
    </div>
  </a>

  <h2 class='text-black text-6xl mb-3'>Portfolio</h2>

  <div class="flex flex-col gap-3">
    <CardWithOptions
      options={[
        { label: 'iOS', href: 'https://apps.apple.com/us/app/fantastic-sudoku-variants/id1573679460' },
        { label: 'Android', href: 'https://play.google.com/store/apps/details?id=com.canlin.fantastic_sudoku_free' },
      ]}
      title="Fantastic Sudoku"
      body="A fun game with variations on classic Sudoku with near-limitless combinations of boards."
      newTab={true}
    />
    <CardWithOptions
      options={[
        { label: 'iOS', href: 'https://apps.apple.com/us/app/blujay-events/id1589629576' },
        { label: 'Android', href: 'https://play.google.com/store/apps/details?id=com.canlin.blujay' },
        { label: 'Web', href: 'https://blujayevents.com' },
      ]}
      title="BluJay Events"
      body="A social app to help people find local events in Cache Valley, Utah."
      newTab={true}
    />
  </div>
</Layout>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
