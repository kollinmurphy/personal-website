---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import Home from "../components/HomeIcon.astro";
import CardWithOptions from "../components/CardWithOptions.astro";
---

<Layout title="Software Development by Kollin Murphy">
  <a href="/">
    <div class="mt-6 mb-4 btn btn-ghost btn-circle">
      <Home fill="black" width={32} height={32} />
    </div>
  </a>

  <h2 class="text-black text-6xl mb-3">Portfolio</h2>

  <div class="flex flex-col gap-3">
    <Card
      title="Galaga"
      body="A web-based clone of the classic arcade game Galaga built using TypeScript. Final project for game development course. Built with a team of two."
      href="/galaga"
      newTab={true}
    />
    <CardWithOptions
      options={[
        {
          label: "iOS",
          href: "https://apps.apple.com/us/app/sudoku-compete/id6443859021",
        },
        {
          label: "Android",
          href: "https://play.google.com/store/apps/details?id=com.kollinmurphy.sudokucompete",
        },
      ]}
      title="Sudoku Compete"
      body="A competitive mobile game in which two players battle in realtime to complete a Sudoku puzzle built using Firebase and React Native with Expo. Built on my own as a final project for a mobile app development course."
      newTab={true}
    />
    <CardWithOptions
      options={[
        {
          label: "iOS",
          href: "https://apps.apple.com/us/app/fantastic-sudoku-variants/id1573679460",
        },
        // {
        //   label: "Android",
        //   href: "https://play.google.com/store/apps/details?id=com.canlin.fantastic_sudoku_free",
        // },
      ]}
      title="Fantastic Sudoku"
      body="A fun mobile game with variations on classic Sudoku with near-limitless combinations of boards built using Flutter. Built for fun with a team of two."
      newTab={true}
    />
    <Card
      title="Cashflow Companion"
      body="A web-based companion app for Rich Dad Poor Dad's board game Cashflow built using Firebase, Astro, and SolidJS. Built for fun on my own."
      href="https://cashflowkm.netlify.app"
      newTab={true}
    />
    <Card
      title="Three Body Problem Simulation"
      body="A web-based simulation of three orbiting masses in a vacuum built using vanilla JS. Built for fun with a team of two."
      href="/three_body_problem/index.html"
      newTab={true}
    />
    <Card
      title="Mazing Race"
      body="A dynamically-generated online maze game controlled by clicking and dragging the mouse built using vanilla JS. Built for fun on my own."
      href="/maze/index.html"
      newTab={true}
    />
  </div>
</Layout>

<style>
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 1rem;
    padding: 0;
  }
</style>
