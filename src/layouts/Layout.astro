---
export interface Props {
	title: string;
}

const { title } = Astro.props;

const year = new Date().getFullYear()
---

<!DOCTYPE html>
<html lang="en" class='bg-gray-50'>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class='w-full overflow-x-hidden relative min-h-screen flex flex-col items-center'>
		<div id='swup' class='swup-transition-fade mb-12'>
			<main class='relative'>
				<slot />
			</main>
		</div>
		<div class='absolute bottom-4 left-4 text-gray-400'>
			&copy; {year} by Kollin Murphy
		</div>
	</body>
</html>

<style is:global>


	:root {
		--awesome-gradient: linear-gradient(0deg, #0210a3, #8ba1da);
		--message-color: #0B93F6;
	}

	@keyframes pulse {
    0%,
    100% {
      background-position-y: 0%;
    }
    50% {
      background-position-y: 80%;
    }
  }
	
	@keyframes hover {
		0%, 100% {
			transform: translateY(0px);
		}

		50% {
			transform: translateY(10px);
		}
	}

  div:hover h1 {
    right: 100%;
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--awesome-gradient);
    animation: pulse 3s ease-in-out infinite;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
  }

	:root {
		--link-gradient: linear-gradient(45deg, #0210a3, #8ba1da 30%, var(--color-border) 60%);
	}


	.message-bubble::before {
		content: "";
		position: absolute;

		z-index: 1;
		bottom: 0;
		right: -6px;
		width: 20px;
		height: 32px;
		background: var(--message-color);
		border-bottom-left-radius: 14px;
	}

	.message-bubble::after {
		content: "";
		position: absolute;

		z-index: 1;
		bottom: -2px;
		right: -20px;
		width: 20px;
		height: 40px;
		background: rgb(249, 250, 251);
		/* background: black; */
		border-bottom-left-radius: 12px;
	}



</style>

<style>
	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-border: #b2cdde;
	}

  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }


	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
	}

	body {
		margin: 0;
	}


</style>

<style is:global>
	h1 {
		font-size: var(--font-size-xl);
	}

	h2 {
		font-size: var(--font-size-lg);
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
